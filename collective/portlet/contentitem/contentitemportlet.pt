<dl class="portlet portletContentItemPortlet"
    i18n:domain="collective.portlet.contentitem"
    tal:condition="view/mybrain">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href view/contentURL" tal:content="view/contentTitle" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd" tal:content="view/contentDescription" />

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <a tal:attributes="href view/contentURL">More &hellip;</a>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
